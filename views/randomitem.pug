extends layout

block content
  h2 A Random Crystals

  - var image_names = ["windchime.jpg", "templechime.jpg", "zenchime.jpg", "bamboochime.jpg", "glasschime.jpg"]

  - for (let i = 0; i < 3; i++) {
    - let rand = Math.floor(Math.random() * 5)
    - let name = image_names[rand]
    img(src=`/images/${name}`, alt=`${name}`, height="300", width="300", class="m-2 border rounded")
  - }

